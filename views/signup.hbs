<!DOCTYPE html>
<html lang="en">
<head>
    <title>Registration</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<!--    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">-->

    {{>style}}
</head>
<body bgcolor="#808080">
<div id="container">
    <form id="form" action="/register" method="post">
        <label for="first_name">First Name:-</label>
        <input name="first_name" id="first_name" type="text" required>

        <label for="last_name">Last Name:-</label>
        <input name="last_name" id="last_name" type="text" required>

        <label for="email">Email:-</label>
        <input name="email" id="email" type="email" required>

        <label for="age">Age:-</label>
        <input name="age" id="age" type="number" required>

        <label for="phone">Phone Number:-</label>
        <input name="phone" id="phone" type="tel" pattern="[0-9]{5}[0-9]{5}" required maxlength="10">

        <label for="pwd">Password:-</label>
        <div style="text-align: center;display:block;">
            <input name="pwd" id="pwd" type="password" required autocomplete="">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" id="eye" class="bi-eye-fill"
                 viewBox="0 0 16 16" style="display: none" onclick="toggle()">
                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" id="slash_eye" style="display: inline-block;" fill="currentColor" class="bi bi-eye-slash-fill" viewBox="0 0 16 16" onclick="toggle()">
                <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z"/>
                <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.83-2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z"/>
            </svg>
        </div>


        <label for="confirm_pwd">Confirm Password:-</label>
        <input style="margin-left: 15px" name="confirm_pwd" id="confirm_pwd" type="password" required>

        {{#if pass}}
            <div class="alert alert-danger" role="alert">
                Password's not matched.
            </div>
            {{/if}}


        {{#if email}}
            <div class="alert alert-danger" role="alert">
                Email already exists.
            </div>
        {{/if}}


        {{#if phone}}
            <div class="alert alert-danger" role="alert">
                Phone number already exists.
            </div>
        {{/if}}





        <input type="submit" value="Register" id="btn">
        <h4 style="font-size: 17px; color: rgba(0,208,208,0.82); margin-top: 10px; margin-bottom: 10px">Already have an account? <a href="/login" style="text-decoration: none">Sign in</a></h4>
    </form>
</div>
<script type="application/javascript" >
    let eye = document.getElementById('eye')
    let slash_eye = document.getElementById('slash_eye')
    let pwd = document.getElementById('pwd')
    let confirm_pwd = document.getElementById('confirm_pwd')

    const toggle = () => {
        if (eye.style.display === 'none') {
            slash_eye.style.display = 'none';
            eye.style.display = 'inline-block';
        } else {
            eye.style.display = 'none';
            slash_eye.style.display = 'inline-block';
        }

        if (pwd.type === 'password' && confirm_pwd.type === 'password') {
            pwd.type = 'text'
            confirm_pwd.type = 'text'
        } else {
            pwd.type = 'password'
            confirm_pwd.type = 'password'
        }
    }

    document.addEventListener('contextmenu', event => event.preventDefault())
</script>
